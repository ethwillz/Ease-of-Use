<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:card_view="http://schemas.android.com/apk/res-auto"
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/card_view"
android:layout_width="wrap_content"
android:layout_height="match_parent"
card_view:cardCornerRadius="6dp"
android:layout_marginBottom="6dp"
    android:layout_gravity="center"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardviewback">

        <ImageView
            android:id="@+id/item_imageView"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:layout_height="300dp"
            android:layout_width="match_parent"
            android:scaleType="fitCenter"
            android:contentDescription="Product Picture"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/item_titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_imageView"
            android:text="title text"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/item_descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_titleTextView"
            android:layout_marginTop="5dp"
            android:text="description text"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>