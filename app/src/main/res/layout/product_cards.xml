<?xml version="1.0" encoding="utf-8"?>
<!--Cardview which displays a single product with its picture, name, and description-->
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    android:layout_marginBottom="6dp"
    android:layout_gravity="center"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardviewback">

        <!--Picture of product-->
        <ImageView
            android:id="@+id/item_image"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:layout_height="300dp"
            android:layout_width="match_parent"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"/>

        <!--Name of product-->
        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_image"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            />

        <!--Description of product-->
        <TextView
            android:id="@+id/item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff" />

        <!--AddUser who uploaded product-->
        <TextView
            android:id="@+id/item_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_description"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"/>

        <!--Invisible price of product for use when clicked-->
        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <!--Invisible link of product for use when clicked-->
        <TextView
            android:id="@+id/item_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <!--Invisible recommendation of product for use when clicked-->
        <TextView
            android:id="@+id/item_recommendation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <!--Invisible url of product for use when clicked-->
        <TextView
            android:id="@+id/item_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <!--Invisible url of product for use when clicked-->
        <TextView
            android:id="@+id/item_image_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <!--Invisible url of product for use when clicked-->
        <TextView
            android:id="@+id/item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

    </RelativeLayout>
</android.support.v7.widget.CardView>